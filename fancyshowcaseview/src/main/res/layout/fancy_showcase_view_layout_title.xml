<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fcsv_title_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fscv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="22sp"
        tools:text="Title" />

    <TextView
        android:id="@+id/fscv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fscv_title"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="22sp"
        tools:text="Desc" />

    <TextView
        android:id="@+id/fscv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fscv_desc"
        android:layout_marginStart="66dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/fscv_desc"
        android:layout_toRightOf="@+id/fscv_desc"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp"
        tools:text="Skip" />


</LinearLayout>